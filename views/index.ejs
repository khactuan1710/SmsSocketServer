<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Socket Button</title>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Kết nối với Socket.IO server
        var socket = io();

        // Lắng nghe sự kiện từ server
        socket.on('button_clicked', function(data) {
            alert(data); // Hiển thị thông báo khi server gửi sự kiện
        });

        // Hàm gọi khi nhấn vào button
        function sendButtonClick() {
            // Lấy giá trị từ ô nhập số điện thoại
            var phoneNumber = document.getElementById("phoneNumber").value;
            
            // Gửi số điện thoại qua fetch tới server
            fetch('/click-button?phone=' + encodeURIComponent(phoneNumber))  
                .then(response => response.text())
                .then(data => console.log(data)); // Xử lý phản hồi từ server
        }
    </script>
</head>
<body>
    <h1>Button Example</h1>
    
    <!-- Thêm ô nhập số điện thoại -->
    <label for="phoneNumber">Số điện thoại nhận SMS:</label>
    <input type="text" id="phoneNumber" placeholder="Nhập số điện thoại">

    <!-- Button gửi sự kiện -->
    <button onclick="sendButtonClick()">Send Notify</button>
</body>
</html>
